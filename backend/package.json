{
  "name": "flower-shop-api",
  "version": "1.0.0",
  "description": "REST API для цветочного магазина",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "init-db": "node scripts/initDb.js",
    "init-admin": "node scripts/initAdminPanel.js",
    "build-admin": "node scripts/buildAdmin.js",
